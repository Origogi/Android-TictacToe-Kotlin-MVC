<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view_controller.MainActivity">

    <Button
            android:text="RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonGrid" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:columnCount="3"
            android:rowCount="3"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/buttonGrid">


        <Button
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="0_0"
                android:textSize="@dimen/button_text_size"

        />
        <Button
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="0_1"
                android:textSize="@dimen/button_text_size"

        />
        <Button
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="0_2"
                android:textSize="@dimen/button_text_size"

        />
        <Button
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="1_0"
                android:textSize="@dimen/button_text_size"

        />
        <Button
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="1_1"
                android:textSize="@dimen/button_text_size"

        />
        <Button
                android:textSize="@dimen/button_text_size"
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="1_2"

        />
        <Button
                android:textSize="@dimen/button_text_size"
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="2_0"

        />
        <Button
                android:textSize="@dimen/button_text_size"
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="2_1"

        />
        <Button
                android:textSize="@dimen/button_text_size"
                android:textColor="@android:color/white"
                android:layout_height="@dimen/button_height"
                android:layout_width="@dimen/button_width"
                android:tag="2_2"

        />


    </GridLayout>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnReset" android:layout_marginTop="24dp"/>
</android.support.constraint.ConstraintLayout>